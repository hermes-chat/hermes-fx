<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.biacode.hermes.fx.fxml.Controller">

    <Label fx:id="label1" layoutX="182.0" layoutY="115.0" text="I love Armenia"/>
    <Label text="${label1.text}"/>
    <Button text="Click me!!!" fx:id="button" onAction="#handleButtonClicked"/>

    <Label text="Difficulty"/>

    <fx:define>
        <ToggleGroup fx:id="toggleGroup"/>
    </fx:define>

    <RadioButton text="Easy" toggleGroup="$toggleGroup"/>
    <RadioButton text="Medium" toggleGroup="$toggleGroup"/>
    <RadioButton text="Hard" toggleGroup="$toggleGroup"/>

</VBox>
